{
  "name": "back-ccr-hackathon",
  "version": "0.0.1",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "node ./build",
    "prod": "node ./node_modules/pm2/bin/pm2 start ./build --name runtime && pm2 logs",
    "test": "jest -i",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "set NODE_ENV=dev&& nodemon -i \"*.test.js\" . --exec babel-node",
    "build": "babel src -d build",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "apidoc": "^0.17.7",
    "apidoc-markdown": "^0.2.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.2",
    "cross-env": "^3.1.3",
    "dotenv-safe": "^4.0.3",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^2.9.0",
    "gulp-babel": "^8.0.0",
    "jest-cli": "^25.0.0",
    "mockgoose": "^8.0.4",
    "nock": "^9.0.2",
    "nodemon": "^1.18.8",
    "opn-cli": "^3.1.0",
    "sinon": "^1.17.5",
    "supertest": "^3.3.0",
    "supertest-as-promised": "^4.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bodymen": "^1.0.3",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "http-status": "^1.0.1",
    "morgan": "^1.9.1",
    "querymen": "^2.1.3",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "twilio": "^3.46.0",
    "winston": "^2.4.0",
    "winston-graylog2": "^1.0.3"
  }
}
